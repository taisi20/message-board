<h1>メッセージ一覧</h1>

<% if @messages.any? %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>メッセージ</th>
    </tr>
  </thead>
  <tbody>
  <% @messages.each do |message| %>
    <tr>
      <td><%= link_to message.id, message %></td>
      <td><%= message.title %></td>
      <td><%= message.content %></td>
    </tr>
  </tbody>
  <% end %>
</table>
<% end %>
<%= paginate @messages %>

<%= link_to '新規メッセージの投稿', new_message_path, class: "btn btn-primary" %>